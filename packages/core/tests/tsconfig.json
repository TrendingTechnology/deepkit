{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "mapRoot": "src/",
    "types": [
      "reflect-metadata",
      "rxjs"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./",
    "../src"
  ]
}
