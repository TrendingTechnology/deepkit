{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "typings",
      "node_modules/@deepkit/core/typings"
    ],
    "types": [
      "quill",
      "highlight",
      "quill-image-resize",
      "ndarray",
      "@petamoriken/float16"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/",
    "typings/",
    "node_modules/@deepkit/*/src/**/*.ts",
    "node_modules/@deepkit/*/index.ts",
    "node_modules/@marcj/glut-client/index.ts",
    "node_modules/@marcj/glut-client/src/**/*.ts",
    "node_modules/@marcj/glut-core/index.ts",
    "node_modules/@marcj/glut-core/src/**/*.ts",
    "node_modules/@marcj/angular-desktop-ui/src/**/*.ts"
  ],
  "paths": {
    "@angular/*": [
      "./node_modules/@angular/*"
    ]
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "preserveSymlinks": true
  }
}
